	<main>
    <section class="login-form-area section-bg  pt-115 pb-120 fix">
        <div class="container">
            <div class="row justify-content-center">
                <!-- login wrapper -->
                <div class="col-12">
                    <div class="login-form-wrapper">
                        <!-- From title -->
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- Section Tittle -->
                                <div class="section-tittle mb-50">
                                    <h2>Profile</h2>
                                    <p>The complete User profile</p>
                                </div>
                            </div>
                        </div>
                        <!-- form -->
                        <form action="/edit/edit-people" method="post">
                          <input type="hidden" style="width:500px;" name="PID" value="<%=peoples[0].PID%>"   >
                            <table class="table table-striped record">
                              <tr>
                                <td>PID</td>
                                <td><%=peoples[0].PID%></td>
                              </tr>
                              <tr>
                                <td>Full Name</td>
                                <td><input type="text" name="full_name" size="50" placeholder="Full Name" value="<%=peoples[0].full_name%>" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Phone Number</td>
                                <td><%=peoples[0].phone_number%></td>
                              </tr>
                              <tr>
                                <td>Blood Group</td>
                                <td><input type="text" size="10" name="blood_group" placeholder="Blood Group" value="<%=peoples[0].blood_group%>" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Date Of Birth</td>
                                <td><input type="date" size="10" name="dob" value="<%=peoples[0].DOB%>" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Gender</td>
                                <td>

                                  <label for="male"  class="mr-50"><%=peoples[0].gender%></label>

                                </td>
                              </tr>
                              <tr>
                                <td>Email-ID</td>
                                <td><%=peoples[0].email%></td>
                              </tr>
                              <tr>
                                <td>Password</td>
                                <td>*********</td>
                              </tr>
                              <tr>
                                <td>OTP Verification</td>
                                <td>
                                  <input type="radio" id="yes" name="otp" value="1" disabled class="editable">
                                  <label for="yes" class="mr-50">Yes</label>
                                  <input type="radio" id="no" name="otp" value="0" checked disabled class="editable">
                                  <label for="no">No</label>
                                </td>
                              </tr>
                              <tr>
                                <td>User Type</td>
                                <td>
                                  <%=peoples[0].user_type%>

                                </td>
                              </tr>
                              <tr>
                                <td>Height</td>
                                <td><input type="text" name="height" size="50" placeholder="Height (in cms)" value="170" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Weight</td>
                                <td><input type="text" name="weight" size="50" placeholder="Weight (in kgs)" value="72" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Next Safe Donation</td>
                                <td><input type="date" size="10" value="2001-06-23" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Previous Notified</td>
                                <td><input type="date" size="10" value="2020-08-23" placeholder="19-06-2001" required disabled class="editable"></td>
                              </tr>
                              <tr>
                                <td>Previous Donations</td>
                                <td><a href = "#">link to donations</a></td>
                              </tr>
							  <tr>
                                <td>Previous Requests</td>
                                <td><a href = "#">link to requests</a></td>
                              </tr>
                            </table>
														<div class="container">
															<div class="row justify-content-between">
																<button type="button" onclick="edit_btn()" class="genric-btn info circle" id="btn-edit">Edit</button>
																<button type="submit" name="submit" value="update" onclick="return confirm('Do you really want to update?');" class="genric-btn info" id="btn-update">Update</button>
																<button type="submit" name="submit" value="delete" onclick="return confirm('Do you really want to delete?');" class="genric-btn danger" id="btn-delete">Delete</button>
																<button type="button" onclick="cancel_btn()" class="genric-btn info" id="btn-cancel">Cancel</button>
															</div>
														</div>
                        </form>
