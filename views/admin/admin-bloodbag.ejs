<body>
	<!-- Preloader Start -->
	<div id="preloader-active">
		<div class="preloader d-flex align-items-center justify-content-center">
			<div class="preloader-inner position-relative">
				<div class="preloader-circle"></div>
				<div class="preloader-img pere-text">
					<img src="../../assets/img/logo/loder.jpg" alt="">
				</div>
			</div>
		</div>
	</div>
	<!-- Preloader Start -->
	<header>
	</header>
	<main>
		<section id="history" class="d-flex align-items-center mt-50 mb-50">
			<div class="container display-logged-in ">
				<div class = "section-tittle">
					<h2 class="row d-flex justify-content-center mb-10">Blood Bags</h2>
				</div>
				<div class="mt-50"></div>
				<table class="table blood-bank-table record">
					<tr>
						<td colspan="2">Blood Bank :</td>
						<td>Total Donors here : </td>
						<td>Total Receiviers here :</td>
						
					</tr>
					<tr>
						<td>A+ : </td>
						<td>AB+ : </td>
						<td>B+ : </td>
						<td>O+ : </td>
					</tr>
					<tr>
						<td>A- : </td>
						<td>AB- : </td>
						<td>B- : </td>
						<td>O- : </td>
					</tr>
				</table>

				<div class="mini-nav">
					<div class="container">
						<div class="row justify-content-start">
							<p class="col-xs-3 mr-150">&#10227;</p>
							<p class="col-xs-3 mr-150">1-3 out of 3</p>
							<p class="col-xs-3">&#8592;</p>
							<p class="col-xs-3">&#8594;</p>
							<p class="col-xs-3 ml-150">
								<div class="dropdown">
									<button type="button" id="advanced-search" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										Advanced Search
									</button>
									<div class="dropdown-menu" aria-labelledby="advanced-search">
										<form class="px-4 py-3" method="get" action="#">
									    <div class="form-group d-flex justify-content-between">
												<label class="d-flex mt-10 mr-10">SortBy</label>
												<select id="sortby" class="default-select form-control">
													<option value="DonationDate" selected>Donation Date</option>
												  <option value="BloodGroup">Blood Group</option>
												</select>
												<label class="d-flex ml-10 mt-10 mr-10 checkbox-inline"><input name="order" class="d-flex mt-2 mr-1" type="radio" value="asc">ascending</label>
												<label class="d-flex mr-10 mt-10 checkbox-inline"><input name="order" class="d-flex mt-2 mr-1" type="radio" value="desc" checked>descending</label>
									    </div>
									    <div class="form-group d-flex justify-content-between">
												<label class="d-flex mr-15" for="filter">Filters</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="available" checked>Available</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="supplied">Supplied</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="rejected">Rejected</label>
									    </div>
											<div class="form-group d-flex justify-content-between">
												<label class="d-flex mr-15" for="filter">More Filters</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="A+" checked>A+</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="A-" checked>A-</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="B+" checked>B+</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="B-" checked>B-</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="AB+" checked>AB+</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="AB-" checked>AB-</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="O+" checked>O+</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="checkbox" value="O-" checked>O-</label>
									    </div>
											<div class="form-group">
												<button type="submit" class="genric-btn primary small">Apply</button>
											</div>
									  </form>
									</div>
								</div>
							</p>
						</div>
					</div>
				</div>
				<div class="scroll-box">
					<table class="table table-striped record">
						<!-- start displaying records -->
						<!-- Stored Blood Bags -->
						<%for(var i=0;i<blood_bag.length;i++){%>
						<tr>
							<%if(blood_bag[i].available==1){%>
							<td><a href="/admin/full-bloodbag.html/<%=blood_bag[i].BBID%>" class="r-status-acc">Available</a></td>
							<%}%>
							<% if(blood_bag[i].donated==1){%>
								<td><a href="/admin/full-bloodbag.html/<%=blood_bag[i].BBID%>" class="r-status-new">supplied</a></td>
								<%}%>
								<%if(blood_bag[i].rejected==1){%>
									<td><a href="/admin/full-bloodbag.html/<%=blood_bag[i].BBID%>" class="r-status-rej">Discarded</a></td>
									<%}%>	
							<td><%=blood_bag[i].blood_group%></td>
							<td class="bold"><%=('0'+(blood_bag[i].donation_date.getDate())).slice(-2)%>-<%=('0'+(blood_bag[i].donation_date.getMonth()+1)).slice(-2)%>-<%=blood_bag[i].donation_date.getFullYear()%></td>
						</tr>
						
						
						<%}%>
					</table>
					<!-- All records ends here -->
				</div>
			</div>
		</section>
	</main>
	<footer>
	</footer>

