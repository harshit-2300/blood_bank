    <!-- Preloader Start -->
    <header>
    </header>
    <main>
        <section class="login-form-area section-bg  pt-115 pb-120 fix">
            <div class="container">
                <div class="row justify-content-center">
                    <!-- login wrapper -->
                    <div class="col-12">
                        <div class="login-form-wrapper">
                            <!-- From title -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- Section Tittle -->
                                    <div class="section-tittle mb-50">
                                        <h2>Create New Camp</h2>
                                        <p>Enter location and date.</p>
                                    </div>
                                </div>
                            </div>
                            <!-- form -->
                            <form action="/admin/add-camp" method="post">
                                <table class="table table-striped record">

                                    <tr>
                                        <td>Camp Name</td>
                                        <td><input type="text" placeholder="Camp Name" size="50" name="camp_name" pattern="^[a-zA-Z]+(\s[a-zA-Z]+)?$" title="Name only contains Alphabets and blank space" required></td>
                                    </tr>

                                    <tr>
                                        <td>Start Date</td>
                                        <td><input name="start_date" type="date" placeholder="dd-mm-yyyy" required></td>
                                    </tr>
                                    <tr>
                                        <td>End Date</td>
                                        
                                        <td><input name="end_date" type="date" placeholder="dd-mm-yyyy" required></td>
                                    </tr>
                                    <tr>
                                        <td>Location</td>
                                        <!-- <td><input name="location" type="text" size="70" placeholder="Location" required></td> -->
                                        <td><textarea name="location" style="width:500px;" placeholder="Location"></textarea></td>
                                    </tr>
                                    <tr>
                                        <td>Comments</td>
                                        <td><textarea name="comments" style="width:500px;" name="purpose" placeholder="Any comments regarding camp"></textarea></td>
                                    </tr>

                                </table>
                                <div class="container">
                                    <div class="row justify-content-between">
                                        <button type="submit" class="genric-btn info circle"
                                            id="btn-submit">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
