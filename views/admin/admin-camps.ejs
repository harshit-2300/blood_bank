	<!-- Preloader Start -->
	<header>
	</header>
	<main>
		<section id="history" class="d-flex align-items-center mt-50 mb-50">
			<div class="container display-logged-in ">
				<h2 class="row d-flex justify-content-center mb-10">Camps</h2>
				<div class="mini-nav">
					<div class="container">
						<div class="row justify-content-start">
							<p class="col-xs-3 mr-150">Active Camps :  </p>
							<p class="col-xs-3 mr-150">Upcoming : </p>
							<p class="col-xs-3 mr-150">Total : </p>
							<p class="col-xs-3 mr-150"><a href="/admin/add-camp.html" target="_blank" class="btn-link">Add New Camp</a></p>
						</div>
					</div>
				</div>
				<div class="mini-nav">
					<div class="container">
						<div class="row justify-content-start">
							<a href="" target="_self"><p class="col-xs-3 mr-150">&#10227;</p></a>
							<p class="col-xs-3 mr-150">1-3 out of 3</p>
							<p class="col-xs-3">&#8592;</p>
							<p class="col-xs-3">&#8594;</p>
							<p class="col-xs-3 ml-150">
								<div class="dropdown">
									<button type="button" id="advanced-search" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										Advanced Search
									</button>
									<div class="dropdown-menu" aria-labelledby="advanced-search">
										<form class="px-4 py-3" method="POST" action="/admin/full-camps/filter">
									    <div class="form-group d-flex justify-content-between">
												<label class="d-flex mt-10 mr-10">SortBy</label>
												<select id="sortby" class="default-select form-control">
													<option value="StartDate" selected>Start Date</option>
												  <option value="EndDate">End Date</option>
												  <option value="CampId">Camp Id</option>
												</select>
												<label class="d-flex ml-10 mt-10 mr-10 checkbox-inline"><input name="order" class="d-flex mt-2 mr-1" type="radio" value="asc">ascending</label>
												<label class="d-flex mr-10 mt-10 checkbox-inline"><input name="order" class="d-flex mt-2 mr-1" type="radio" value="desc" checked>descending</label>
									    </div>
									    <div class="form-group d-flex justify-content-between">
												<label class="d-flex mr-15" for="filter">Filters</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="radio" value="Upcoming" checked>Upcoming</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="radio" value="ongoing">Ongoing</label>
												<label class="d-flex mr-10 checkbox-inline"><input name="filter" class="d-flex mt-2 mr-1" type="radio" value="previous">Previous</label>
									    </div>
											<div class="form-group">
												<button type="submit" class="genric-btn primary small">Apply</button>
											</div>
									  </form>
									</div>
								</div>
							</p>
						</div>
					</div>
				</div>
				<div class="scroll-box">
					<table class="table table-striped record">
						<!-- start displaying records -->
						<!-- active camps record -->

						<tr>
							<td>Camps</td>
							<td>Camp ID</td>
							<td class="bold">Location</td>
							<td class="bold">Start Date  </td>
							<td class="bold">End Date </td>
						</tr>

						<%for(var i=0;i<camps.length;i++){%>
							<%console.log(i)%>
							<tr>
								<td>
									<% if(camps[i].camp_start > new Date()){ %>
											<a href="/admin/full-camps.html/<%=camps[i].BDCID%>" target="_blank" class="r-status-acc ml-15 mr-15">upcoming</a>
									<%}
									  else if(camps[i].camp_end > new Date()){ %>
											<a href="/admin/full-camps.html/<%=camps[i].BDCID%>" target="_blank" class="r-status-new ml-15 mr-15">ongoing</a>
									<%}
										else { %>
											<a href="/admin/full-camps.html/<%=camps[i].BDCID%>" target="_blank" class="r-status-rej ml-15 mr-15">ended</a>
									<%}%>
								</td>
								<td><%=camps[i].BDCID%></td>
								<td style="max-width:250px;"><%=camps[i].location%></td>
								<td class="bold"> <%=('0'+(camps[i].camp_start.getDate())).slice(-2)%>-<%=('0'+(camps[i].camp_start.getMonth()+1)).slice(-2)%>-<%=camps[i].camp_start.getFullYear()%></td>
								<td class="bold"> <%=('0'+(camps[i].camp_end.getDate())).slice(-2)%>-<%=('0'+(camps[i].camp_end.getMonth()+1)).slice(-2)%>-<%=camps[i].camp_end.getFullYear()%></td>
							</tr>
							<%}%>


					</table>
					<!-- All records ends here -->
				</div>
			</div>
		</section>
