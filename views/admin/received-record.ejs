<body>
	<!-- Preloader Start -->
	<div id="preloader-active">
		<div class="preloader d-flex align-items-center justify-content-center">
			<div class="preloader-inner position-relative">
				<div class="preloader-circle"></div>
				<div class="preloader-img pere-text">
					<img src="../assets/img/logo/loder.jpg" alt="">
				</div>
			</div>
		</div>
	</div>
	<!-- Preloader Start -->
	<header>
	</header>
	<main>
		<section class="login-form-area section-bg  pt-115 pb-120 fix">
			<div class="container">
				<div class="row justify-content-center">
					<!-- login wrapper -->
					<div class="col-12">
						<div class="login-form-wrapper">
							<!-- From title -->
							<div class="row">
								<div class="col-lg-12">
									<!-- Section Tittle -->
									<div class="section-tittle mb-50">
										<h2>Received Bloodbag</h2>
										<p>Verify and assign bloodbag.</p>
									</div>
								</div>
							</div>
							<!-- add database query in record-editor.js -->
							<!-- this is dummy form there is no 'submit' button -->
							<form action="/edit/received" method="POST">
								<input type="hidden" style="width:500px;" name="REID" value="<%=REID%>">
								<table class="table table-striped record">
									<tr>
										<td>BloodbagID</td>
										<td>Received On</td>
										<td>Amount Received</td>
										<td>Blood Group</td>
										<td class="icon-delete">Delete</td>
									</tr>
									<%for(var i=0;i<record.length;i++){%>
										
									
									<!-- print all the received records -->
									
									<tr>
										<td><input type="text" size="10" placeholder="BloodbagID" value="<%=record[i].BBID%>" required disabled class="editable"></td>
										<td><input type="date" size="10" placeholder="Received Date" value="<%=record[i].received_date%>" required disabled class="editable"></td>
										<td><input type="text" size="10" placeholder="Amount Received" value="500" required disabled class="editable"></td>
										<td><input type="text" size="3" placeholder="Blood Group" value="<%=record[i].blood_group%>%>" required disabled class="editable"></td>
										<td class="icon-delete"><button type="button" onclick="delete_bloodbag()">&#10060;</button></td>
									</tr>
									<%}%>
									<!-- end printing records -->
									<tr id="new_bloodbag">
										<td><input type="text" size="10" placeholder="BloodbagID" name="BBID" value="" required disabled class="editable"></td>
										<td><input type="date" size="10" placeholder="Received Date" name="received_date" value="" required disabled class="editable"></td>
										<td><input type="text" size="10" placeholder="Amount Received" name="amount" value="" required disabled class="editable"></td>
										<td><input type="text" size="3" placeholder="Blood Group" name="blood_group" value="" required disabled class="editable"></td>
									</tr>
								</table>
								<div class="container">
									<div class="row justify-content-between">
										<button type="button" onclick="add_newbloodbag_toggle_btn()" class="genric-btn info circle" id="btn-submit">Add new Bloodbag</button>
										<button type="button" onclick="edit_btn();toggle_class('icon-delete','block');" class="genric-btn info circle" id="btn-edit">Edit</button>
										<button type="button" onclick="update_btn();toggle_class('icon-delete','none');" class="genric-btn info" id="btn-update">Update</button>
										<button type="button" onclick="delete_btn();toggle_class('icon-delete','none');" class="genric-btn danger" id="btn-delete">Delete</button>
										<button type="button" onclick="cancel_btn();toggle_class('icon-delete','none');" class="genric-btn info" id="btn-cancel">Cancel</button>
										<button type="submit" onclick="return confirm('Are you sure to assign blood bag?');" class="genric-btn info" id="bloodbag-btn-add">Add</button>
										<button type="button" onclick="cancel_newbloodbag()" class="genric-btn danger" id="bloodbag-btn-cancel">Cancel</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	<footer>
	</footer>

