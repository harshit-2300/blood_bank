<body>
    <!-- Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="../../assets/img/logo/loder.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader Start -->
    <header>
    </header>
    <main>
        <section class="login-form-area section-bg  pt-115 pb-120 fix">
            <div class="container">
                <div class="row justify-content-center">
                    <!-- login wrapper -->
                    <div class="col-12">
                        <div class="login-form-wrapper">
                            <!-- From title -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- Section Tittle -->
                                    <div class="section-tittle mb-50">
                                        <h2>Blood Bag Record</h2>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                            <!-- form -->
                            <form action="#" method="post">
                                <table class="table table-striped record">
                                    <tr>
                                        <td>Blood Bag ID</td>
                                        <td><%=blood_bag[0].BBID%></td>
                                    </tr>
                                    <tr>
                                        <td>Blood Group</td>
                                        <td><input type="text" size="10" placeholder="Blood Group" value="<%=blood_bag[0].blood_group%>" required disabled class="editable"></td>
                                    </tr>
                                    <tr>
                                        <td>Donor's Name</td>
                                        <td><%=blood_bag[0].full_name%></td>
                                    </tr>
                                    <tr>
                                        <td>Donor's Profile</td>
                                        <td><a href="/admin/full-people.html/<%=blood_bag[0].PID%>" target="_self">Link to Profile</a></td>
                                    </tr>
                                    <tr>
                                        <td>Donation Date</td>
                                        <td><input type="date" size="10" value="blood_bag[0].donation_date" required disabled class="editable"></td>
                                    </tr>
                                    <tr>
										<td>Status</td>
										<td>
											<input type="radio" id="avail" name="status" value="Available" checked disabled class="editable" onclick="hide_fields();">
											<label for="accept" class="mr-50">Available</label>
											<input type="radio" id="don" name="status" value="Donated" disabled class="editable"  onclick="hide_fields();">
											<label for="reject" class="mr-50">Donated</label>
                                            <input type="radio" id="dis" name="status" value="Discarded" disabled class="editable"  onclick="hide_fields();">
                                            <label for="reject">Discarded</label>


										</td>
									</tr>

                                    <tr id = "receiver-name">
                                        <td>Receiver's Name</td>
                                        <td>Receiver Name</td>
                                    </tr>
                                    <tr id="receiver-profile">
										<td>Receiver's Profile</td>
										<td><a href="full-people.html" target="_self">Link to profile</a></td>
									</tr>
                                    <tr>
                                        <td>Recevied Date</td>
                                        <td><input type="date" size="10" value="2020-12-31" required disabled class="editable"></td>
                                    </tr>
                                </table>
                                <div class="container">
                                    <div class="row justify-content-between">
                                        <button type="button" onclick="edit_btn();" class="genric-btn info circle" id="btn-edit">Edit</button>
                                        <button type="button" onclick="cancel_btn()" class="genric-btn info" id="btn-cancel">Cancel</button>
                                        <button type="button" onclick="update_btn();" class="genric-btn info" id="btn-update">Update</button>
                                        <button type="button" onclick="delete_btn()" class="genric-btn danger" id="btn-delete">Delete</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
    </footer>

