                        <form action="/request/submit" class="login-form" method="post" enctype="multipart/form-data">
                            <div class="row ">
                                <div class="col-lg-12">
                                    <div class="input-form">
                                        <input type="text" name="name" placeholder="Full Name (required)" pattern="^[a-zA-Z]+(\s[a-zA-Z]+)?$" title="Name only contains Alphabets and blank space" autocomplete="name" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-lg-12">
                                    <div class="input-form">
                                        <input type="text" name="phone" placeholder="Phone Number (required)" pattern="[1-9]{1}[0-9]{9}" title="Must contain 10 digits 0-9 , first digit can't be 0" autocomplete="tel-local"  required>
                                    </div>
                                </div>
                            </div>
							<div class="row d-flex justify-content-start">
                                <div class="col-xs-6">
                                  <div class="label-form">
                                      <label for="blood-type">Blood Group</label>
														<p>(required)</p>
                                  </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="select-form">
                                        <select name="blood_type" required>
											<option value="A+" selected>A+</option>
											<option value="B+">B+</option>
                                            <option value="AB+">AB+</option>
											<option value="O+">O+</option>
                                            <option value="A-">A-</option>
                                            <option value="B-">B-</option>
                                            <option value="AB-">AB-</option>
                                            <option value="O-">O-</option>
                                        </select>
                                    </div>
                                </div>
                              </div>
															<div class="row d-flex justify-content-start">
																<div class="col-xs-6">
																	<div class="label-form">
																			<label for="gender">Gender</label>
																		  <p>(required)</p>
																	</div>
																</div>
                                <div class="col-xs-6">
                                  <div class="radio-wrapper">
                                      <div class="select-radio">
                                          <div class="radio">
                                              <input id="radio-1" name="gender" type="radio" value="male">
                                              <label for="radio-1" class="radio-label">Male</label>
                                          </div>
                                          <div class="radio">
                                              <input id="radio-2" name="gender" type="radio" value="female">
                                              <label for="radio-2" class="radio-label">Female</label>
                                          </div>
                                      </div>
                                   </div>
                                 </div>
                              </div>
                              <div class="row d-flex justify-content-between">
                                  <div class="col-xs-6">
                                    <div class="label-form">
                                        <label>Date of Birth</label>
                                    </div>
                                  </div>
                                  <div class="col-xs-6 mr-20">
                                      <div class="input-form">
										  <% let max_date = new Date();
  										   	 max_date = (max_date.getFullYear())+'-'+('0'+(max_date.getMonth()+1)).slice(-2)+'-'+('0'+(max_date.getDate())).slice(-2);
  										   %>
                                          <input type="date" name="dob" placeholder="Date of Birth" autocomplete="bday" min="1920-01-01" max="<%=max_date%>" >
                                      </div>
                                  </div>
                              </div>
                              <div class="row">
                                  <div class="col-12">
                                      <div class="input-form">
                                          <input type="text" name="units" placeholder="Quantity Units(required)" pattern="[1-9]{1}[0-9]+" title="Must contain digits 0-9 , first digit can't be 0" required>
                                      </div>
                                  </div>
                              </div>
                              <div class="row d-flex justify-content-around">
                                  <div class="col-xs-6">
                                    <div class="label-form">
                                        <label>Valid Document / Prescription (image or document)</label>
                                    </div>
                                  </div>
                                  <!-- valid document -->
                                  <div class="col-xs-6">
                                      <div class="input-form">
                                          <input type="file" name="image" accept="image/*" placeholder="valid document" required/>
                                      </div>
                                  </div>
                              </div>
								<div class="row">
                                  <div class="col-12">
													<div class="form-group">
														<textarea class="form-control w-100" name="message" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" placeholder=" Enter Message" maxlength="254"></textarea>
													</div>
                                  </div>
                              </div>
                              <div class="row">
                                  <!-- Button -->
